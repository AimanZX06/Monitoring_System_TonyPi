# TonyPi Robot Monitoring System - Environment Variables
# Copy this file to .env and update the values as needed

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_DB=tonypi_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
# For production, use a strong password:
# POSTGRES_PASSWORD=your-secure-password-here

# =============================================================================
# InfluxDB Configuration  
# =============================================================================
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=adminpass
INFLUXDB_ORG=tonypi
INFLUXDB_BUCKET=robot_data
INFLUXDB_TOKEN=my-super-secret-auth-token
# For production, generate a secure token:
# INFLUXDB_TOKEN=your-secure-influxdb-token-here

# =============================================================================
# Grafana Configuration
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
# For production, use a strong password:
# GRAFANA_PASSWORD=your-secure-grafana-password

# Grafana API settings (optional)
GRAFANA_BASE_URL=http://grafana:3000
GRAFANA_API_KEY=

# =============================================================================
# MQTT Broker Configuration
# =============================================================================
MQTT_BROKER_HOST=mosquitto
MQTT_BROKER_PORT=1883
# MQTT_USERNAME=tonypi
# MQTT_PASSWORD=tonypi123

# =============================================================================
# AI Features (Optional)
# =============================================================================
# Google Gemini API key for AI-powered report analysis
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# =============================================================================
# Frontend Configuration
# =============================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_MQTT_BROKER_URL=ws://localhost:9001

# =============================================================================
# Production Settings (uncomment for production)
# =============================================================================
# NODE_ENV=production
# DEBUG=false

# =============================================================================
# Security Notes
# =============================================================================
# 1. Never commit .env file to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate tokens and passwords periodically
# 4. Use secrets management (HashiCorp Vault, AWS Secrets Manager) in production
# 5. Enable TLS/SSL for all services in production
