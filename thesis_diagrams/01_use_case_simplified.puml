@startuml Use Case Diagram - TonyPi Monitoring System
!theme plain
skinparam actorStyle awesome
skinparam usecase {
    BackgroundColor White
    BorderColor #333333
    ArrowColor #333333
}

title TonyPi Robot Monitoring System - Use Case Diagram

' Actors
actor "User/Operator" as User #LightBlue
actor "Administrator" as Admin #LightGreen
actor "TonyPi Robot" as Robot #Orange

' System Boundary
rectangle "TonyPi Monitoring System" {
    
    ' Core Monitoring Use Cases
    usecase "View Real-time\nDashboard" as UC1
    usecase "Monitor Robot\nTelemetry" as UC2
    usecase "View Camera\nStream" as UC3
    
    ' Control Use Cases
    usecase "Send Robot\nCommands" as UC4
    usecase "Access SSH\nTerminal" as UC5
    
    ' Analytics Use Cases
    usecase "Generate AI\nReports" as UC6
    usecase "View Historical\nData" as UC7
    
    ' Admin Use Cases
    usecase "Manage Users" as UC8
    usecase "Configure\nAlerts" as UC9
}

' User Relationships
User --> UC1
User --> UC2
User --> UC3
User --> UC4
User --> UC6
User --> UC7

' Admin Relationships (extends User)
Admin --|> User
Admin --> UC5
Admin --> UC8
Admin --> UC9

' Robot Relationships
Robot --> UC2 : publishes data
Robot --> UC3 : streams video
Robot <-- UC4 : receives commands

' Dependencies
UC2 ..> UC7 : <<stores>>
UC2 ..> UC6 : <<analyzes>>

@enduml
